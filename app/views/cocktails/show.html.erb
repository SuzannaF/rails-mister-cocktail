<div class="container">
  <h1>Cocktail details</h1>
  <p><%= @cocktail.name %></p>
  <p><% @cocktail.ingredients.each do |ingredient| %></p>
      <p><%= ingredient.name %></p>
      <p><% ingredient.doses.each do |dose| %></p>
            <p> <%= dose.description %></p>
         <% end %>
    <% end %>
  <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail) %>
  <%= link_to 'Show All Cocktails', cocktails_path %>
</div>
