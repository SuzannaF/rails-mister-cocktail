<div class="banner">
 <a href="#" class="banner-title">Cocktails</a>
</div>
<div class="container">
  <div class="row justify-content-between">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <%= link_to cocktail_path(cocktail), class: "card" do %>
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to cocktail.name, cocktail %></h5>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
    <%= link_to 'Add new cocktail', new_cocktail_path %>
</div>
