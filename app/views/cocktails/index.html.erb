<div class="banner">
 <a href="#" class="banner-title">Cocktails üçπ</a>
</div>
<div class="container">
  <div class="row justify-content-between">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <div  class="card-cocktail-index">
          <%= link_to cocktail_path(cocktail), class: "card" do %>
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag cocktail.photo.key, class: "card-img-top card-img-index" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to cocktail.name, cocktail, class: "card-title-index" %></h5>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
    <%= link_to 'Add new cocktail', new_cocktail_path %>
</div>
